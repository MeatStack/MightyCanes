# Current date and time
from datetime import datetime
print datetime.now()

# Extracting year, month and day
from datetime import datetime
now = datetime.now()

print now.year
print now.month
print now.day

# Date format
from datetime import datetime
now = datetime.now()
print "%02d/%02d/%04d"%(now.day, now.month, now.year)

# Time format
from datetime import datetime
now = datetime.now()
print "%02d:%02d:%02d" % (now.hour, now.minute, now.second)

# Print dd/mm/yyyy ss:mm:hh
from datetime import datetime
now = datetime.now()

print "%02d/%02d/%02d %02d:%02d:%02d" % (now.day, now.month, now.year, now.hour, now.minute, now.second)
